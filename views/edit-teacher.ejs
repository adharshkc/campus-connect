          <div class="row">
            <div class="col-sm-12">
              <div class="card">
                <div class="card-body">
                  <form action="/admin/editTeacher" method="post">
                    <div class="row">
                      <div class="col-12">
                        <h5 class="form-title"><span>Basic Details</span></h5>
                      </div>
                      <div class="col-12 col-sm-4">
                        <div class="form-group local-forms">
                          <label>Name <span class="login-danger">*</span></label>
                          <input type="text" required name="name" class="form-control" placeholder="Enter Name" value="<%= staff.fullName %>" />
                        </div>
                      </div>
                      <div class="col-12 col-sm-4">
                        <div class="form-group local-forms">
                          <label>Gender <span class="login-danger">*</span></label>
                          <select name="gender" class="form-control select">
                            <option <%= staff.gender === 'Male' ? 'selected' : '' %>>Male</option>
                            <option <%= staff.gender === 'Female' ? 'selected' : '' %>>Female</option>
                            <option <%= staff.gender === 'Others' ? 'selected' : '' %>>Others</option>
                          </select>
                        </div>
                      </div>
                      <div class="col-12 col-sm-4">
                        <div class="form-group local-forms">
                          <label>Mobile <span class="login-danger">*</span></label>
                          <input type="text" name="phone" class="form-control" required placeholder="Enter Phone" value="<%= staff.contactNumber %>" />
                        </div>
                      </div>
                      <!-- <div class="col-12 col-sm-4">
                        <div class="form-group local-forms calendar-icon">
                          <label>Joining Date <span class="login-danger">*</span></label>
                          <input type="text" name="joiningDate" required class="form-control datetimepicker" placeholder="DD-MM-YYYY" value="<%= staff.joiningDate %>" />
                        </div>
                      </div> -->
                      <div class="col-12 col-sm-4">
                        <div class="form-group local-forms">
                          <label>Subject Specialisation <span class="login-danger">*</span></label>
                          <input type="text" name="subject" class="form-control" required value="<%= staff.subjectSpecialization %>" />
                        </div>
                      </div>
                      <div class="col-12 col-sm-4">
                        <div class="form-group local-forms">
                          <label>Designation <span class="login-danger">*</span></label>
                          <input type="text" name="designation" class="form-control" required value="<%= staff.designation %>" />
                        </div>
                    </div>
                    <div class="col-12 col-sm-4">
                        <div class="form-group local-forms">
                            <label>Department <span class="login-danger">*</span></label>
                            <input type="text" name="department" class="form-control" required value="<%= staff.department.name %>" />
                        </div>
                      </div>
                  
