      <div class="page-wrapper">
        <div class="content container-fluid">
          <div class="page-header">
            <div class="row align-items-center">
              <div class="col">
                <h3 class="page-title">Events</h3>
                <ul class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active">Events</li>
                </ul>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="card card-table">
                <div class="card-body">
                  <div class="page-header">
                    <div class="row align-items-center">
                      <div class="col">
                        <h3 class="page-title">Events</h3>
                      </div>
                      <div
                        class="col-auto text-end float-end ms-auto download-grp"
                      >
                        <a href="#" class="btn btn-outline-gray me-2 active"
                          ><i class="feather-list"></i
                        ></a>
                        <!-- <a href="/admin/addEvent" class="btn btn-primary"
                          ><i class="fas fa-plus"></i
                        ></a> -->
                      </div>
                    </div>
                  </div>

                  <div class="table-responsive">
                    <table
                      class="table border-0 star-student table-hover table-center mb-0 table-striped"
                    >
                      <thead class="student-thread">
                        <tr>
                          <th>
                            <div class="form-check check-tables">
                              <input
                                class="form-check-input"
                                type="checkbox"
                                value="something"
                              />
                            </div>
                          </th>
                          <th>ID</th>
                          <th>Title</th>
                          <th>Description</th>
                          <th>Start Date</th>
                          <th>End Date</th>
                          <th>Location</th>
                          <th>Type</th>
                          <!-- <th class="text-end">Action</th> -->
                        </tr>
                      </thead>
                      <tbody>
                        <% events.forEach(function(event) { %>
                        <tr>
                          <td>
                            <div class="form-check check-tables">
                              <input
                                class="form-check-input"
                                type="checkbox"
                                value="<%= event.id %>"
                              />
                            </div>
                          </td>
                          <td><%= event.id || 'N/A' %></td>
                          <td>
                            <h2 class="table-avatar">
                              <a href="#"><%= event.title %></a>
                            </h2>
                          </td>
                          <td><%= event.description %></td>
                          <td>
                            <%= new
                            Date(event.startDateTime).toLocaleDateString('en-GB')
                            %>
                          </td>
                          <td>
                            <%= new
                            Date(event.endDateTime).toLocaleDateString('en-GB')
                            %>
                          </td>
                          <td><%= event.location || 'N/A' %></td>
                          <td><%= event.type || 'N/A' %></td>
                          <!-- <td class="text-end">
                          <div class="actions">
                            <a
                              href="/admin/deleteEvent/<%= event.id %>"
                              class="btn btn-sm bg-success-light me-2"
                            >
                              <i class="feather-trash"></i>
                            </a>
                            <a
                              href="/admin/editEvent/<%= event.id %>"
                              class="btn btn-sm bg-danger-light"
                            >
                              <i class="feather-edit"></i>
                            </a>
                          </div>
                        </td> -->
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
